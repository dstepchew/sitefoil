<script>
  $(function() {
    if(location.href.indexOf("focus_on_order_url")>-1) {
      $("input[name='site[order_url]'").focus()
    }
  })
</script>


<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="little-form jumbotron" id="recipe-slide-1">

<div class="container">
    <span class="glyphicon glyphicon-globe text-center hidden-xs"></span>
    <div class="box">
        
       
              <div class="form-group" style="margin-top:20px;">
                <%= f.label :name, "Name Your Site" %><br>
                <%= f.text_field :name, class: "form-control" %>
              </div>
        
        
        
              <div class="form-group">
                <%= f.label :url, "Site URL address" %><br>
                <%= f.text_field :url, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :order_url, "Order page url (for conversion rate calculation)" %><br>
                <%= f.text_field :order_url, class: "form-control" %>
              </div>

          
              <button class="btn btn-default full-width" style="color:#FFF;"><span class="glyphicon glyphicon-ok"></span> SAVE SITE</button> 
             
         
    </div>
</div>  
</div>

