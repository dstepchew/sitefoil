<h1>Listing sites</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
     <% if site.user == current_user %>
      <tr>
        <td><%= link_to site.name, edit_site_path(site) %></td>
        <td><%= site.url %></td>
        <td></td>
        <td><%= link_to 'Script setup', site_path(site) %></td>
        <td><%= link_to 'View Statistics', stats_site_path(site) %></td>
        <td><%= link_to 'Recipes', recipes_site_path(site) %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Delete', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add A New Site', new_site_path, class: "btn btn-primary" %>
