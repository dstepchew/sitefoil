<style>
#site_test_script_installed .error {
  color: red;
}

#site_test_script_installed .success {
  color: rgb(60, 118, 61);
}
</style>
<p id="notice"><%= notice %></p>




<h1><%= @site.name %></h1>


<p>
  <strong>Url:</strong>
  <%= @site.url %>
</p>


<div class="jumbotron center">
  <h2>Copy and paste the following code just before the "&lt;/html&gt;" tag on <strong> all pages</strong> of your website:</h2>
  <textarea class="form-control" style='cursor:text' id="siteTextarea" readonly >
   <script async src=<%= @site.tracker_url(request.host_with_port) %>></script>
 </textarea>

<a href="#" class="btn btn-primary" onclick='testSite(<%= @site.id %>);return false;'>Test Code Presence</a>

 <div class="jumbotron">

  <table class="table table-responsive" style="text-align:left;">
    <tr>
      <td>Status</td>
      <td id='site_test_script_installed'></td>
    </tr>
  </table>
</div>


<%= link_to 'Edit', edit_site_path(@site) %>