<%= render 'pages/home' unless user_signed_in? %>



<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Site</th>
      <th>Status</th>
      <th>Hits</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.site.url rescue '' %></td>
        <td><%= recipe.status %></td>
        <td><%= recipe.hits %></td>
        <td><%= recipe.description %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), data: { no_turbolink: true } %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
