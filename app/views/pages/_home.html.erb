    <% @title = 'Site Automation With Sitefoil' %>
<% @description = 'Automate Your Site' %>

    <% if user_signed_in? %>

<div class="container" style="background;#FFF;">

    <div class="row">
    <h2>SiteFoil Dashboard</h2>
     <h3>Hello, <%= current_user.full_name %>!</h3>
    
                            <div class="container">
                                <div class="row bordered padded hidden" style="">

                                    


                                </div>


                                <% if current_user.sites.empty? %>
                                    <p>Welcome To SiteFoil!</p>

                                    <div class="jumbotron text-center" style="background:#EFEFEF;">
                                    <div class="container">
                                        <h2>You do not have any web sites set up yet</h2>
                                    <%= link_to "Get Started Here", new_site_path, class: "btn btn-primary" %>
                                      </div>
                                    </div>


                                <% else %>


                                <% current_user.sites.each do |site| %>
                                    <div class="row bordered padded" style="background:#F5F5F5;">
                                        <div class="col-md-3" style="font-size:1.5em;">
                                            <%= link_to site.name_or_url, site_path(site) %>
                                            <h4><%= site.url %> <br /><small style="color:#666;">Created: <%= site.created_at.strftime("%b %d, %Y") %><br />Current Time: <%= site.time.to_formatted_s(:rfc822)  %></small></h4> 
                                        </div>
                                        <div class="col-md-5">
                                        <h4><%= link_to "Recipes", recipes_path(site)%></h4>
                                            <div class="list-group">
                                            <% site.recipes.each do |recipe| %>
                                          
                                           

                                            
                                                <%= link_to recipe_path(recipe), class: "list-group-item" do %>
                                                 <%= recipe.name_or_action %>

                                                 <span class="badge" style="font-size:.5em; ">
                                                 <%= recipe.enabled ? "ACTIVE" : "INACTIVE" %>
                                                 </span>

                                                 
                                                <% end %>
                                            
                                     
                                            <% end %></div>
                                        </div>
                                        <div class="col-md-2">
                                        <h4><%= link_to 'Site Stats', stats_site_path(site) %></h4>
                                             <p><%= number_to_human(site.unique_visitor_hits.count.count, :format => '%n%u', :units => { :thousand => 'K' }) %> Unique Sessions</p>
                                             <p><p><%= number_to_human(site.hits.count, :format => '%n%u', :units => { :thousand => 'K' }) %> Total Sessions</p>
                                        </div>
                                        <div class="col-md-2">
                                            
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-primary">Actions</button>
                                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                  <span class="caret"></span>
                                                  <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                     <%= link_to 'View Stats', stats_site_path(site) %>
                                                    </li>
                                                    <li>
                                                    <%= link_to edit_site_path(site) do %>
                                                    Edit Site
                                                    <% end %>
                                                    </li>
                                                  
                                                   <li> <%= link_to 'Get Code Snippet', code_site_path(site) %>  </li>
                                                  
                                                </ul>
                                            </div>

                                        </div>
                                        
     
                                    </div>
                                    <% end %>
                                <% end %>
 


                            </div>    
   

  
</div>
</div>
  <% else %>
  





   <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="container"><div class="row">
  <div class="col-lg-4 col-md-3 col-sm-3"></div>
  <div class="col-lg-4 col-md-6 col-sm-6">

          <div class="jumbotron text-center">
            <div class="container">
              <span class="glyphicon glyphicon-hand-down hidden-xs text-center" style="margin:auto;"></span>
              <h2>Sign In</h2>
            
                      <div class="row form-group">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                          <%= f.email_field :email, class: "form-control", :autofocus => true, :placeholder => 'Email Address' %>
                        </div>
                        <br>
                       
                        <div class="col-xs-12 col-sm-12 col-md-12">
                         <%= f.password_field :password, class: "form-control", :autofocus => true, :placeholder => 'password' %>
                        </div>
                        <br>
                        <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                          <%= button_tag( :class => "btn btn-default full-width") do %>
                              <span class="glyphicon glyphicon-ok"></span>
                        </div>
                      </div>
                   </div>       
              <% end %>
          </div>
  </div>

  <div class="col-lg-4 col-md-3 col-sm-3"></div>
</div></div>
<div class="clearfix"></div>
</div>


 <% end %>
<div class="clearfix"></div>


<div class="panel-footer" style="display:none;">
    <%= render "devise/shared/links" %>
  </div>



  <% end %>  
<% content_for :body_class, "home" %>